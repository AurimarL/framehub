{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "cmd",
          "args": [
            "/c",
            {
              "validator": ".+"  
            }
          ],
          "sidecar": false
        }
      ]
    }
  ]
}
